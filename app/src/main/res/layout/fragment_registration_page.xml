<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aalloul.packets.RegistrationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout_registration">

        <Button
            android:text="@string/register_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_me"
            android:background="@drawable/curvedbutton"
            android:textColor="@color/cast_expanded_controller_progress_text_color"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:layout_below="@+id/user_location"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/user"
            android:id="@+id/user_picture"
            android:layout_below="@+id/welcome_text"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:background="@drawable/backgroundstate"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="user_profile_picture" />

        <TextView
            android:text="@string/add_profile_picture"
            android:layout_height="wrap_content"
            android:id="@+id/caption_user_picture"
            android:layout_below="@+id/user_picture"
            android:layout_marginTop="20dp"
            android:textSize="10sp"
            android:inputType="textMultiLine"
            android:textIsSelectable="false"
            android:singleLine="false"
            android:layout_width="70dp"
            android:layout_marginLeft="10dp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:id="@+id/welcome_text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/user_first_name"
            android:layout_below="@+id/welcome_text"
            android:hint="@string/enter_first_name"
            android:layout_toRightOf="@+id/user_picture"
            android:inputType="textCapWords" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:ems="10"
            android:id="@+id/user_surname"
            android:hint="@string/enter_surname"
            android:layout_below="@+id/user_first_name"
            android:layout_toRightOf="@+id/user_picture" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/user_phone_number"
            android:layout_below="@+id/user_surname"
            android:layout_toRightOf="@+id/user_picture"
            android:hint="@string/enter_phone_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_location"
            android:hint="@string/user_current_city"
            android:layout_below="@+id/user_phone_number"
            android:layout_toRightOf="@+id/user_picture"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <Button
            android:text="@string/register_not_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_not_now"
            android:background="@drawable/backgroundstate"
            android:layout_alignTop="@+id/register_me"
            android:layout_toRightOf="@+id/register_me"
            android:layout_toEndOf="@+id/register_me"
            android:textAllCaps="false" />
    </RelativeLayout>
</FrameLayout>
