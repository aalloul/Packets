<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        tools:context="com.app.shippy.android.MainFragment"
        android:background="@drawable/frog_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pickuplocation_main_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:alpha="0.8"
            android:background="@drawable/frameborder"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="@string/explain_usage_search2"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/setdate_mainActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pickuplocation_main_activity"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:alpha="0.8"
            android:background="@drawable/frameborder"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="@string/explain_usage_search3"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setdate_mainActivity"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:alpha="0.8"
            android:background="@drawable/frameborder"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="@string/explain_usage_search4"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:id="@+id/relative_layout_xxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <Spinner
                android:id="@+id/setNumberPackages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/packageicon"
                android:dropDownWidth="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/packageicon" />

            <Spinner
                android:id="@+id/packagesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/setNumberPackages"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="false"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/setNumberPackages"
                android:layout_toRightOf="@+id/setNumberPackages"
                android:alpha="0.8"
                android:background="@color/white"
                android:dropDownWidth="match_parent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dropofflocation_mainactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout_xxx"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:alpha="0.8"
            android:background="@drawable/frameborder"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="@string/explain_usage_search5"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dropofflocation_mainactivity"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:alpha="0.8"
            android:background="@drawable/frameborder"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="@string/explain_usage_search6"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:id="@+id/layout3_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/postbutton_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@+id/searchbutton_main_activity"
                android:layout_toRightOf="@+id/searchbutton_main_activity"
                android:background="@drawable/frameborder"
                android:backgroundTint="@color/test_color"
                android:elevation="24dp"
                android:text="@string/postbutton_main_activity"
                android:textAllCaps="false"
                android:textColor="@color/cast_expanded_controller_progress_text_color"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/searchbutton_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/frameborder"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="24dp"
                android:text="@string/searchbutton_main_activity"
                android:textAllCaps="false"
                android:textColor="@color/cast_expanded_controller_progress_text_color"
                android:textSize="16sp"
                android:textStyle="normal|bold" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>