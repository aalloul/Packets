<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aalloul.packets.RegistrationFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout_registration">

        <Button
            android:text="@string/register_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_me"
            android:background="@drawable/curvedbutton"
            android:textColor="@color/cast_expanded_controller_progress_text_color"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:layout_below="@+id/user_location"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/user"
            android:id="@+id/user_picture"
            android:layout_below="@+id/welcome_text"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_margin="20dp"
            android:background="@drawable/backgroundstate" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:id="@+id/welcome_text" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/user_first_name"
            android:layout_below="@+id/welcome_text"
            android:hint="@string/enter_first_name"
            android:layout_toRightOf="@+id/user_picture" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/user_surname"
            android:hint="@string/enter_surname"
            android:layout_below="@+id/user_first_name"
            android:layout_toRightOf="@+id/user_picture" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/user_phone_number"
            android:layout_below="@+id/user_surname"
            android:layout_toRightOf="@+id/user_picture"
            android:hint="@string/enter_phone_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_location"
            android:hint="@string/user_current_city"
            android:layout_below="@+id/user_phone_number"
            android:layout_toRightOf="@+id/user_picture"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <Button
            android:text="@string/register_not_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_not_now"
            android:layout_toRightOf="@+id/register_me"
            android:layout_below="@+id/user_location"
            android:layout_marginTop="30dp"
            android:background="@drawable/backgroundstate" />
    </RelativeLayout>
</FrameLayout>
