<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aalloul.packets.buttonSearchOffer">

    <!-- TODO: Update blank fragment layout -->


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/newoffer"
        android:id="@+id/publishNewOffer"
        android:background="@drawable/backgroundstate"
        android:elevation="10dp"
        android:layout_marginBottom="0dp"
        android:adjustViewBounds="true"
        app:backgroundTint="@android:color/white" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search_button"
        android:id="@+id/search_button"
        android:elevation="10dp"
        android:background="@drawable/backgroundstate"
        android:layout_below="@+id/publishNewOffer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:backgroundTint="@android:color/white"
        android:adjustViewBounds="true"
        android:clickable="true" />
</RelativeLayout>
