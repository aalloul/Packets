        <RelativeLayout
            android:layout_height="wrap_content"
            android:id="@+id/layout2_main_activity"
            android:background="@drawable/frameborder"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:elevation="24dp"
            android:backgroundTint="@color/white"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dot1_main_activity"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/dot"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bar_main_activity"
                android:layout_below="@id/dot1_main_activity"
                android:rotation="90"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/bar"
                android:scaleX="3"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dot2_main_activity"
                android:layout_below="@+id/setNumberPackages"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/dot"
                android:layout_marginTop="5dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/dropofflocation_mainactivity"
                android:layout_toRightOf="@+id/dot2_main_activity"
                android:layout_below="@+id/setNumberPackages"
                android:hint="@string/enter_dropoff_location"
                android:layout_marginTop="22dp"
                android:background="@drawable/backgroundstate"
                android:clickable="true"
                android:layout_alignBottom="@+id/dot2_main_activity"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/dot2_main_activity" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setdate_mainActivity"
                android:layout_toRightOf="@+id/bar_main_activity"
                android:layout_below="@+id/pickuplocation_main_activity"
                android:layout_marginTop="5dp"
                android:src="@drawable/calendar"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_toEndOf="@+id/bar_main_activity"
                android:background="@drawable/calendar"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setNumberPackages"
                android:layout_below="@+id/setdate_mainActivity"
                android:background="@drawable/packageicon"
                android:layout_marginTop="13dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/packageicon"
                android:layout_toRightOf="@+id/bar_main_activity"
                android:dropDownWidth="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_centerVertical="false"
                android:layout_centerInParent="false"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="34dp"
                android:paddingRight="8dp"
                android:layout_toEndOf="@+id/bar_main_activity" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateofpickup_mainActivity"
                android:layout_toRightOf="@+id/setdate_mainActivity"
                android:layout_below="@+id/pickuplocation_main_activity"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:layout_toEndOf="@+id/setdate_mainActivity" />

            <TextView
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/pickuplocation_main_activity"
                android:hint="@string/enter_pickup_location"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/dot1_main_activity"
                android:layout_toEndOf="@+id/dot1_main_activity"
                android:background="@drawable/backgroundstate"
                android:layout_alignBottom="@+id/dot1_main_activity"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:textColorHint="@android:color/black"
                android:textColor="@android:color/black"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/packagesize"
                android:dropDownWidth="match_parent"
                android:background="@drawable/backgroundstate"
                android:layout_alignTop="@+id/setNumberPackages"
                android:layout_toRightOf="@+id/setNumberPackages"
                android:layout_toEndOf="@+id/setNumberPackages"
                android:layout_marginTop="12dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout3_main_activity"
            android:layout_below="@+id/layout2_main_activity"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <Button
                android:text="@string/postbutton_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/postbutton_main_activity"
                android:background="@color/colorPublish"
                android:textColor="@color/cast_expanded_controller_progress_text_color"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:layout_toRightOf="@+id/searchbutton_main_activity"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_toEndOf="@+id/searchbutton_main_activity"
                android:elevation="24dp" />

            <Button
                android:text="@string/searchbutton_main_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchbutton_main_activity"
                android:background="@color/colorPrimary"
                android:textColor="@color/cast_expanded_controller_progress_text_color"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:elevation="24dp" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>