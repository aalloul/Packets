<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:background="@drawable/frog_background2"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    tools:context="com.example.aalloul.packets.RegistrationFragment"
    android:alpha="1"
    android:layout_height="match_parent"
    android:paddingTop="0dp">


    <RelativeLayout
        android:id="@+id/relativeLayout_registration"
        android:elevation="24dp"
        android:layout_centerInParent="false"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/vert"
        android:alpha="0.8"
        android:layout_centerVertical="false"
        android:layout_marginTop="80dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_rel_lay"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/user_icon_bevel"
                android:id="@+id/user_picture"
                android:contentDescription="@string/add_profile_picture"
                android:elevation="19dp"
                android:background="@drawable/backgroundstate"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="true"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_centerVertical="false"
                android:adjustViewBounds="true"
                android:cropToPadding="false" />

            <TextView
                android:text="@string/add_profile_picture"
                android:layout_height="wrap_content"
                android:id="@+id/caption_user_picture"
                android:textSize="12sp"
                android:layout_below="@+id/user_picture"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:typeface="normal"
                android:layout_marginStart="5dp"
                android:layout_width="80dp"
                android:textColor="@color/regTextColor"
                android:layout_centerInParent="false"
                android:gravity="center"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textPersonName"
            android:id="@+id/user_first_name"
            android:hint="@string/enter_first_name"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:typeface="normal"
            android:textStyle="normal|bold"
            android:layout_below="@+id/reg_rel_lay"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="false"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_centerVertical="false"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textPersonName"
            android:ems="10"
            android:id="@+id/user_surname"
            android:layout_alignParentBottom="false"
            android:hint="@string/enter_surname"
            android:layout_below="@+id/user_first_name"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:typeface="normal"
            android:textStyle="normal|bold"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/user_phone_number"
            android:hint="@string/enter_phone_number"
            android:layout_below="@+id/user_surname"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:typeface="normal"
            android:textStyle="normal|bold"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_location"
            android:layout_below="@+id/user_phone_number"
            android:hint="@string/user_current_city"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:typeface="normal"
            android:textStyle="normal|bold"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_registration"
        android:id="@+id/rel2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <Button
            android:text="@string/register_not_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_not_now"
            android:background="@drawable/backgroundstate"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_centerHorizontal="false"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/register_me"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <Button
            android:text="@string/register_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_me"
            android:background="@color/colorPrimary"
            android:textColor="@color/cast_expanded_controller_progress_text_color"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:elevation="14dp"
            android:gravity="center"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:text="@string/privacy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/privacyButton"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_below="@+id/rel2" />

</RelativeLayout>
</ScrollView>