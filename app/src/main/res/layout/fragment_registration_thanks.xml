<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aalloul.packets.RegistrationThanks">

    <TextView
        android:text="@string/thankyou_registration_pt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thank_you_registering"
        android:layout_above="@+id/thank_you_registering_pt2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thank_you_registering_pt2"
        android:text="@string/thankyou_registration"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>
