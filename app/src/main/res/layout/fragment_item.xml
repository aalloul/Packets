<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:elevation="8dp"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dot"
        android:id="@+id/dotfrom"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_toRightOf="@+id/layout_left_fragment_item"
        android:layout_marginRight="10dp" />

    <RelativeLayout
        android:id="@+id/layout_left_fragment_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_name_sender"
            tools:text="First name"
            android:layout_below="@+id/transporter_picture"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="71dp"
            android:layout_height="79dp"
            app:srcCompat="@drawable/user"
            android:id="@+id/transporter_picture"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bar"
        android:id="@+id/bar"
        android:rotation="90"
        android:layout_toRightOf="@+id/layout_left_fragment_item"
        android:layout_marginTop="35dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dot"
        android:id="@+id/dotTo"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_toRightOf="@+id/layout_left_fragment_item"
        android:layout_marginTop="69dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="thecity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/source_city_country"
        android:layout_toRightOf="@+id/dotfrom"
        android:layout_marginTop="13dp"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/car"
        android:id="@+id/transport_method"
        android:layout_toRightOf="@+id/bar"
        android:layout_marginTop="35dp" />

    <TextView
        android:text="theotherCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destination_city_country"
        android:layout_toRightOf="@+id/dotTo"
        android:layout_marginTop="83dp"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:textSize="14sp" />

    <TextView
        android:text="Sep 10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sender_departure_date"
        android:background="@android:color/holo_green_light"
        android:textColor="@color/cast_expanded_controller_progress_text_color"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:padding="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/packageicon"
        android:id="@+id/package_icom"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp" />

    <!--    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sender_number_packages"
            android:textSize="10sp"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="false"
            android:layout_alignBottom="@+id/transport_method_icon"
            android:layout_alignLeft="@+id/transport_method_icon"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="-30dp" />-->

</RelativeLayout>
